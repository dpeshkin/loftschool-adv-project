extends ../_template.pug

block title
    title Welcome!
    - desc = "Личный стайт веб-разработчика Дмитрия Пешкина"

block content
    section.welcome
        .container
            .welcome__auth
                a(href="#").btn.btn_auth Авторизоваться

            .welcome__main
                .person
                    .person__photo
                        img(src="assets/images/myphoto.jpg")
                    .person__name Дмитрий Пешкин
                    .person__caption Личный сайт веб разработчика
                .welcome__socials
                    +socialList('welcome', socials)
                .welcome__buttons
                    +navList('btn btn_welcome-nav', '', navItems)
     
        footer.footer.footer__welcome 
            .footer__copyright © Дмитрий Пешкин | создано в LoftSchool | 2017



